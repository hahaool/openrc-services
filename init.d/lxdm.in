#!@RUNSCRIPT@

description="LXDE Display Manager"

supervisor=supervise-daemon
command=/usr/sbin/lxdm

depends() 
{
	provide xdm display-manager
	needs localmount

        after bootmisc consolefont modules netmount
        after keymaps
        want logind
}

start_pre() {
	checkpath -d -o lxdm:lxdm -m755 /var/lib/lxdm

	ebegin "$description"
}
